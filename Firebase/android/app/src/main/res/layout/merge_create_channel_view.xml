<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <EditText
    android:id="@+id/newChannelName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/insert_channel_name" />

  <Switch
    android:id="@+id/privateChannel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/private_channel" />

  <LinearLayout
    android:id="@+id/addMemberView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
      android:id="@+id/channelMemberName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="3"
      android:hint="@string/add_channel_members" />

    <Button
      android:id="@+id/addChannelMemberButton"
      android:text="@string/add"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1" />
  </LinearLayout>

  <Button
    android:id="@+id/createButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:text="@string/create" />

</merge>
